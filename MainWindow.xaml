<Window x:Class="TRPZ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TRPZ"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Sign up / Sign in" Height="500" Width="1000">
    <Grid Background="#333">
        <StackPanel VerticalAlignment="Center">
                    <Button Background="#333" Foreground="#28a745" FontSize="20px" MaxWidth="400" Height="70" BorderThickness="1" BorderBrush="#28a745" Margin="0, 0, 0, 50"  Content="Login" Click="Button_Click_Login">
                        <Button.Effect>
                        <DropShadowEffect BlurRadius="10" Color="#28a745" ShadowDepth="0"></DropShadowEffect>
                        </Button.Effect>
                    </Button>
                <Button  Background="#333" Foreground="#28a745" FontSize="20px" MaxWidth="400" Height="70" BorderThickness="1" BorderBrush="#28a745"  Content="Register" Click="Button_Click_Register">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="10" Color="#28a745" ShadowDepth="0"></DropShadowEffect>
                    </Button.Effect>
                </Button>
        </StackPanel>
    </Grid>
</Window>
