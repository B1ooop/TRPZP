<Window x:Class="TRPZ.ConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TRPZ"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="ConfirmWindow" Height="500" Width="1020">
    <Grid Background="#333">
        <TextBlock x:Name="productList" Foreground="#28a745" FontSize="30px" HorizontalAlignment="Center" Margin="0,20,0,0"/>
        <Button  Background="#333" Foreground="#28a745" FontSize="20px" Width="200" Height="Auto" BorderThickness="1" BorderBrush="#28a745"  Content="Confirm order" Margin="782,388,10,10" Click="Button_Click_Confirm" >
            <Button.Effect>
                <DropShadowEffect BlurRadius="10" Color="#28a745" ShadowDepth="0"/>
            </Button.Effect>
        </Button>
        <Button  Background="#333" Foreground="#a72828" FontSize="20px" Width="200" Height="Auto" BorderThickness="1" BorderBrush="#a72828"  Content="Remove order" Margin="10,388,782,10" Click="Button_Click_RemoveOrder" >
            <Button.Effect>
                <DropShadowEffect BlurRadius="10" Color="#a72828" ShadowDepth="0"/>
            </Button.Effect>
        </Button>
    </Grid>
</Window>
